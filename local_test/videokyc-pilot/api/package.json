{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist/mail",
    "copy-assets": "node ./pre-build.js",
    "build": "npm run nest build && copy-assets",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "run-s copy-assets start:dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ./src/config/ormconfig.ts",
    "migration:generate": "npm run typeorm migration:generate -- -n ",
    "migration:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.1",
    "@nestjs/common": "~8.0.5",
    "@nestjs/config": "~1.0.1",
    "@nestjs/core": "~8.0.5",
    "@nestjs/jwt": "~8.0.0",
    "@nestjs/mongoose": "~8.0.0",
    "@nestjs/passport": "~8.0.0",
    "@nestjs/platform-express": "~8.0.5",
    "@nestjs/platform-socket.io": "~8.0.5",
    "@nestjs/swagger": "~5.0.8",
    "@nestjs/typeorm": "~8.0.1",
    "@nestjs/websockets": "~8.0.5",
    "@peculiar/webcrypto": "^1.1.7",
    "@sendgrid/mail": "^7.4.5",
    "@t00nday/nestjs-pdf": "^2.0.6",
    "@types/unzipper": "^0.10.4",
    "@types/xml2json": "^0.11.4",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "dateformat": "^4.5.1",
    "dotenv": "^10.0.0",
    "handlebars": "^4.7.7",
    "mime-types": "^2.1.32",
    "moment": "^2.29.1",
    "mongoose": "^5.13.3",
    "nodemailer": "^6.6.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~7.2.0",
    "socket.io": "~4.1.3",
    "swagger-ui-express": "~4.1.6",
    "typeorm": "~0.2.34",
    "unzipper": "^0.10.11",
    "xadesjs": "^2.1.2",
    "xml2json": "^0.12.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fs-extra": "^10.0.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
